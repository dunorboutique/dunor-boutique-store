---
interface Props {
  type?: "button" | "submit" | "reset"
  id?: string
  class?: string
}
const { type, id, class: className, ...rest } = Astro.props as Props
---

<button
  type={type}
  id={id}
  {...rest}
  class={`shrink-0 flex items-center gap-2 px-10 py-2.5 w-fit bg-dunor-black rounded text-white text-lg font-medium hover:scale-105 disabled:opacity-50 disabled:pointer-events-none disabled:cursor-not-allowed focus-visible:outline-none focus-visible:ring-dunor-black/90 focus-visible:ring-4 focus-visible:ring-offset-2 transition ${className}`}
>
  <slot />
</button>
