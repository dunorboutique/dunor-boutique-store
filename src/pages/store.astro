---
import { getAllProducts } from "@db/products"
import Layout from "@layouts/Layout.astro"
import Products from "@components/Products.astro"
import Sorting from "@components/Sorting.astro"
import { sortedProductsByMethod } from "@lib/sorting"

const sortMethod = Astro.url.searchParams.get("sort")
const { products, error } = await getAllProducts()
const sortedProducts = sortedProductsByMethod(sortMethod, products)
---

<Layout title="Nuestros Productos" normalHeader>
  <main class="grow flex flex-col gap-14 pb-32">
    <header class="flex flex-col gap-2 pt-10">
      <div class="flex flex-col py-4 px-6 sm:px-8 gap-2">
        <h1 id="page-title" class="w-full bg-white text-4xl">Colección Completa</h1>
        <p class="w-full text-lg text-neutral-500">
          Encuentra el traje perfecto para tu evento especial. Todos nuestros trajes están hechos
          con los mejores materiales y con la mejor calidad.
        </p>
        <Sorting />
      </div>
    </header>
    <div class="flex flex-col md:flex-row gap-12 px-6 sm:px-8 w-full">
      <section id="products" class="grow products-grid">
        {products && <Products products={sortedProducts} />}
        {
          error && (
            <div class="flex items-center justify-center w-full h-96">
              <h1 class="text-2xl text-red-700">Hubo un error al cargar los productos</h1>
              <p class="text-lg text-neutral-600">{error.message}</p>
            </div>
          )
        }
      </section>
    </div>
  </main>
</Layout>

<style>
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
    gap: 2.5rem 1.5rem;
  }
</style>

<script>
  const title = document.getElementById("page-title")!
  const sticky = title.offsetTop

  window.addEventListener("scroll", () => {
    if (window.scrollY > sticky) {
      title.classList.add("fixed", "top-0", "z-20", "py-3", "border-b")
    } else {
      title.classList.remove("fixed", "top-0", "z-20", "py-3", "border-b")
    }
  })
</script>
